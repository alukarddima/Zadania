unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    Button1: TButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;
 a,b,c:integer;
 d:string;
implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
begin

a:=StrToInt(Edit1.Text);
b:=StrToInt(Edit2.Text);
c:=StrToInt(Edit3.Text);


 if a+c>b then showMessage('Число подходит!')

begin
   if a+b>c then showMessage('Число подходит!')
   else showMessage('Число неправильное!!')
 end
else

     begin
      if b+c>a then  showMessage('Число подходит!')
      else showMessage('Число неправильное!!')
end




end;
end.
